<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/about_us_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Team"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/about_us_text"
            android:layout_marginTop="20dp"
            android:src="@drawable/team" />

        <TextView
            android:id="@+id/our_team_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:padding="10dp"
            android:gravity="center"
            android:layout_below="@id/image_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/image_2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_below="@id/our_team_text"
            android:layout_marginTop="20dp"
            android:src="@drawable/desgn" />

        <TextView
            android:id="@+id/text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ReptiCage monitors important parameters such as humidity, soil moisture, temperature, ventilation, and food to ensure the health and well-being of reptiles. It also has a mobile app that provides real-time data and information and serves as a remote control."
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_below="@id/image_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The app offers live views inside ReptiCage, past data stored in a database, and alerts for critical parameters. With its advanced features, ReptiCage makes it easy to monitor and manage reptiles."
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_below="@id/text_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</ScrollView>
